@import "base/constants"
@import "base/colors"
@import "base/mixins"
@import "helpers"




body
    -webkit-text-size-adjust: 100%;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-family $normal-font-family
*
  box-sizing(border-box)
  
.sprite-icon
    display block
    &.inline
        display inline-block
                    
a 
    color #000
    &.pink
      color $pink
    &:focus, &:hover
        text-decoration none
        color $pink
        font-weight bold
        outline none
        
        
    &.no-highlight
        *
          &:hover, &:focus, &:active, &:visited
            outline 0!important

    font-weight normal 
    
input 
    //-webkit-appearance none  /* Remove default shadow */
    border 1px solid #ccc

.pink-text
  color $pink

p
  font-size 16px
  
.separator
  width 30%
  margin 40px auto
  height 1px
  background-color #979797
    
  
i, cite, em, var, address, dfn 
    font-style normal

.overlay-processing
  position fixed
  width 100%
  height 100%
  text-align center
  vertical-align middle
  display none
  background: white
  opacity 0.8
  z-index 1009
  top 0
  left 0
  img
      position: fixed;
      top: 50%;
      left: 50%;
      margin-top: -64px;
      margin-left: -64px;
      z-index: 9999;  
  &.loading-in-progress 
    display block!important;
    
.map_canvas 
    width 100%
    height 300px
.map-info-text
  color $pink
  font-size 14px 
  text-align center
  margin 10px 0  

.footer
  margin-top 20px

.dropdown-menu
  border-radius(0)
  
  
