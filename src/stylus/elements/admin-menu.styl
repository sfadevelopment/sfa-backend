.admin-menu
    padding 10px 0 0 0
    margin 0
    display inline-block
    float initial
    width 100%
    border-bottom 1px solid $grey-border
    li
      padding 0
      margin 0 41px 0 0
      display inline-block
      float left
      
      a
        padding 0 22px 18px 22px
        margin 0 0 -1px 0
        display inline-block
        font-family $medium-font-family
        font-size 18px
        line-height 18px
        color #e545a2
        font-weight normal
        border-bottom solid 3px transparent
        
        &.active, a:hover
            color #000000
            border-color #e545a2